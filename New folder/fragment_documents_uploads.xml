<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activties.Signup.DocumentsUploadsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/_10sdp"
            android:fillViewport="true"
            >

            <LinearLayout
                android:id="@+id/linear_nextSignupDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="12dp"
                            android:text="GST No"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_GstNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/back_edit_text"
                            android:maxLength="15"
                            android:padding="12dp"

                            android:textColor="@color/black"
                            android:textSize="15sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="12dp"
                            android:text="PAN No"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_PanNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/back_edit_text"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="12dp"
                            android:text="Aadhaar No"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_AadhaarNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/back_edit_text"
                            android:inputType="number"
                            android:maxLength="12"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="12dp"
                            android:text="Bank Name"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_bankName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/back_edit_text"
                            android:hint=""
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#1AB7B3B3"
                            android:fontFamily="@font/muli"
                            android:padding="15dp"
                            android:text="Upload Documents Image"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:orientation="vertical">


                                <com.daasuu.bl.BubbleLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@android:color/transparent"
                                    android:padding="8dp"
                                    android:id="@+id/c_online"
                                    app:bl_arrowDirection="bottom"
                                    app:bl_arrowHeight="8dp"
                                    app:bl_arrowPosition="16dp"
                                    app:bl_arrowWidth="8dp"
                                    app:bl_cornersRadius="6dp"
                                    app:bl_strokeWidth="1dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:maxLines="1"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Company  Certificate"
                                        android:textColor="@color/black"
                                        android:textSize="13dp" />

                                </com.daasuu.bl.BubbleLayout>



                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/Img_RegCertificateSetImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_150sdp"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_baseline_camera_alt_24"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        />

                                    <ImageView
                                        android:id="@+id/img_ClickRegCertificate"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/addgallery"
                                        android:layout_marginBottom="10dp"
                                        app:tint="#CCEC5036" />


                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:orientation="vertical">


                                <com.daasuu.bl.BubbleLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@android:color/transparent"
                                    android:padding="8dp"
                                    app:bl_arrowDirection="bottom"
                                    app:bl_arrowHeight="8dp"
                                    app:bl_arrowPosition="16dp"
                                    app:bl_arrowWidth="8dp"
                                    app:bl_cornersRadius="6dp"
                                    app:bl_strokeWidth="1dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="@string/gst_reg_certificate"
                                        android:textColor="@color/black"
                                        android:textSize="13dp" />

                                </com.daasuu.bl.BubbleLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/Img_GstCertificateSetImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_150sdp"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        android:src="@drawable/ic_baseline_camera_alt_24" />

                                    <ImageView
                                        android:id="@+id/img_ClickGstCertificate"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/addgallery"
                                        android:layout_marginBottom="10dp"
                                        app:tint="#CCEC5036" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:orientation="vertical">


                                <com.daasuu.bl.BubbleLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@android:color/transparent"
                                    android:padding="8dp"
                                    app:bl_arrowDirection="bottom"
                                    app:bl_arrowHeight="8dp"
                                    app:bl_arrowPosition="16dp"
                                    app:bl_arrowWidth="8dp"
                                    app:bl_cornersRadius="6dp"
                                    app:bl_strokeWidth="1dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="@string/pan_card_proof"
                                        android:textColor="@color/black"
                                        android:textSize="13dp" />

                                </com.daasuu.bl.BubbleLayout>



                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/Img_PanCertificateSetImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_150sdp"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        android:src="@drawable/ic_baseline_camera_alt_24" />

                                    <ImageView
                                        android:id="@+id/img_ClickPanCertificate"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/addgallery"
                                        android:layout_marginBottom="10dp"
                                        app:tint="#CCEC5036" />


                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:orientation="vertical">


                                <com.daasuu.bl.BubbleLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@android:color/transparent"
                                    android:padding="8dp"
                                    app:bl_arrowDirection="bottom"
                                    app:bl_arrowHeight="8dp"
                                    app:bl_arrowPosition="16dp"
                                    app:bl_arrowWidth="8dp"
                                    app:bl_cornersRadius="6dp"
                                    app:bl_strokeWidth="1dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Aadhaar Proof"
                                        android:textColor="@color/black"
                                        android:textSize="13dp" />

                                </com.daasuu.bl.BubbleLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/Img_AadhaarCertificateSetImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_150sdp"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        android:src="@drawable/ic_baseline_camera_alt_24" />

                                    <ImageView
                                        android:id="@+id/img_ClickAadhaarCertificate"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/addgallery"
                                        android:layout_marginBottom="10dp"
                                        app:tint="#CCEC5036" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:orientation="vertical">


                                <com.daasuu.bl.BubbleLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@android:color/transparent"
                                    android:padding="8dp"
                                    app:bl_arrowDirection="bottom"
                                    app:bl_arrowHeight="8dp"
                                    app:bl_arrowPosition="16dp"
                                    app:bl_arrowWidth="8dp"
                                    app:bl_cornersRadius="6dp"
                                    app:bl_strokeWidth="1dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Bank Account proof"
                                        android:textColor="@color/black"
                                        android:textSize="13dp" />

                                </com.daasuu.bl.BubbleLayout>



                                <RelativeLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/Img_BankCertificateSetImage"
                                        android:layout_width="250dp"
                                        android:layout_height="@dimen/_150sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        android:src="@drawable/ic_baseline_camera_alt_24" />

                                    <ImageView
                                        android:id="@+id/img_ClickBankCertificate"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/addgallery"
                                        android:layout_marginBottom="10dp"
                                        app:tint="#CCEC5036" />


                                </RelativeLayout>

                            </LinearLayout>



                        </LinearLayout>















                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <Button
                                android:visibility="gone"
                                android:id="@+id/btn_nextFinish"
                                android:layout_width="150dp"
                                android:layout_height="60dp"
                                android:layout_margin="15dp"
                                android:backgroundTint="@color/green"
                                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right"
                                android:fontFamily="@font/muli_semibold"
                                android:text="Finish"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
        </ScrollView>



    </androidx.core.widget.NestedScrollView>
</FrameLayout>